<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginTop="30dp"
                android:text="First nane"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/firstnameedit"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:hint="Enter your first name"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                tools:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:text="Last name"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/lastnameedit"
                android:layout_width="273dp"
                tools:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:hint="Enter your last name"
                android:textColor="@android:color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/mobileno"
                tools:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:text="Mobile no"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/mobilenoedit"
                android:layout_width="273dp"
                tools:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:hint="10 digit mobile no"
                android:inputType="phone"
                android:textColor="@android:color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_marginTop="5dp"
                android:layout_marginStart="33dp"
                android:text="Email"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailidedit"
                android:layout_width="273dp"
                tools:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/state"
                tools:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:text="State"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_state"
                android:layout_width="273dp"
                tools:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:entries="@array/state"

                />

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:text="City"
                tools:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_city"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                tools:layout_marginTop="5dp"
                android:entries="@array/city"


                />

            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:text="Password"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                tools:layout_marginTop="5dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/passwordedit"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                tools:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/confirmpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:text="Confirm password"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/confirmpasswordedit"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:hint="Re-enter password"
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                tools:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/signupbutton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginStart="70dp"
                android:background="@android:color/holo_blue_dark"
                android:text="Sign up"
                android:textColor="#172686"
                android:textSize="20dp"
                tools:layout_marginTop="15dp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>